<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="8dip"
                    android:text="@string/look_goods_state"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="8dip"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/state1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableTop="@drawable/content_icon_imformation_def"
                            android:text="@string/sure_info"
                            android:textColor="@color/itry_list_goods_name"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/line_state2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dip"
                            android:background="@drawable/content_image_line_coplete" />

                        <TextView
                            android:id="@+id/state2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableTop="@drawable/content_icon_yifachu_complete"
                            android:text="@string/wait_get"
                            android:textColor="@color/itry_list_goods_name"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/line_state3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dip"
                            android:background="@drawable/content_image_line_def" />

                        <TextView
                            android:id="@+id/state3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableTop="@drawable/content_icon_finish_def"
                            android:text="@string/finish"
                            android:textColor="@color/itry_list_goods_name"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/order_code_back"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/check_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="16sp" />

                <com.aibaide.xuanbao.image.NetImageView
                    android:id="@+id/code_img"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:layout_marginTop="20dip"
                    android:scaleType="centerCrop" >
                </com.aibaide.xuanbao.image.NetImageView>

                <TextView
                    android:id="@+id/can_use_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="20dip"
                    android:textColor="@color/itry_list_goods_name"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="8dip"
                        android:text="@string/get_self_adress"
                        android:textColor="@color/itry_list_dome_color"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="18dip"
                        android:layout_marginRight="25dip"
                        android:layout_marginTop="8dip"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/get_market"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="8dip"
                        android:textColor="@color/itry_list_goods_name"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/get_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="8dip"
                        android:textColor="@color/itry_list_dome_color"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:background="@color/white" >

                <com.aibaide.xuanbao.image.NetImageView
                    android:id="@+id/goods_img"
                    android:layout_width="84dip"
                    android:layout_height="84dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:scaleType="centerCrop" >
                </com.aibaide.xuanbao.image.NetImageView>

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="106dip"
                    android:layout_marginTop="8dip"
                    android:textColor="@color/itry_list_goods_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/goods_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="106dip"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="155dip"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goods_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_name"
                    android:layout_marginLeft="106dip"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goods_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dip"
                    android:layout_marginRight="5dip"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="8dip"
                    android:text="@string/goods_get_intrduce"
                    android:textColor="@color/itry_list_dome_color"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="10dip"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/goods_get_intrduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="18dip"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/itry_list_goods_name"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="34dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:background="@drawable/share_back"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/back_itry"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="34dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip"
            android:background="@drawable/share_back"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/sure_get"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>