<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="348dp"
    android:background="@drawable/img_list_item_back" >

    <com.aibaide.xuanbao.image.NetImageView
        android:id="@+id/goods_img"
        android:layout_width="match_parent"
        android:layout_height="280dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginTop="280dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="100dip"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/itry_list_goods_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/name"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@drawable/icon_hots"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/name"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/hots"
            android:gravity="center_vertical"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_exercise_time"
            android:gravity="left|bottom"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:textColor="@color/white"
            android:textScaleX="1.2"
            android:textSize="9sp" />

        <View
            android:id="@+id/end"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_exercise_ward_info"
            android:visibility="gone" />
    </RelativeLayout>

    <com.aibaide.xuanbao.views.TimeTextView
        android:id="@+id/linetime"
        android:layout_width="wrap_content"
        android:layout_height="24dip"
        android:background="@color/gray_48_a99"
        android:drawingCacheQuality="low"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:visibility="gone" />

    <View
        android:id="@+id/wating"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="12dp"
        android:background="@drawable/icon_wating"
        android:visibility="gone" />

</RelativeLayout>