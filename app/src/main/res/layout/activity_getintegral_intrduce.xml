<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:background="@drawable/img_invate_back" />

    <TextView
        android:id="@+id/lable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="邀请好友，成功注册获得"
        android:textColor="@color/itry_list_dome_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lable1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:text="好友下单，成功下单获得"
        android:textColor="@color/itry_list_dome_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/lable1"
        android:textColor="@color/tab_check"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/lable2"
        android:textColor="@color/tab_check"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_blue_back"
        android:gravity="center"
        android:text="邀请注册"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>