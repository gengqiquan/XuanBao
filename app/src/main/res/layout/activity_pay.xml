<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginTop="5dip"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="支付金额"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pay_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:textColor="@color/tab_check"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginTop="12dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="支付方式"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/pay_bt1"
            android:layout_width="match_parent"
            android:layout_height="62dip"
            android:layout_marginTop="0.5dip"
            android:background="@color/white" >

            <ImageView
                android:layout_width="49dip"
                android:layout_height="49dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:src="@drawable/icon_wechat" />

            <ImageView
                android:id="@+id/pay1"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="微信支付"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:text="推荐安装微信5.0以上版本用户使用"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pay_bt2"
            android:layout_width="match_parent"
            android:layout_height="62dip"
            android:background="@color/white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="25dp"
                android:background="@color/line" />

            <ImageView
                android:layout_width="49dip"
                android:layout_height="49dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dip"
                android:src="@drawable/icon_alipay" />

            <ImageView
                android:id="@+id/pay2"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="支付宝支付"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:text="推荐安装支付宝的用户使用"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/round_blue_back"
            android:gravity="center"
            android:text="@string/sure_pay"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>