<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="8dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="福利信息"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:drawablePadding="5dp"
            android:text="福利信息"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@color/white" >

        <com.qbs.itrytryc.image.NetImageView
            android:id="@+id/goods_img"
            android:layout_width="84dip"
            android:layout_height="84dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:scaleType="centerInside" >
        </com.qbs.itrytryc.image.NetImageView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="106dip"
            android:layout_marginTop="8dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/itry_list_goods_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="106dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ops"
            android:layout_marginLeft="106dip"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tibs3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="106dip"
            android:text="消  费  码："
            android:textColor="@color/itry_list_goods_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dip"
            android:layout_toRightOf="@+id/tibs3"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/tab_check"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/line" />
    </RelativeLayout>

</LinearLayout>