<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/defult_address"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_marginTop="12dip"
            android:background="@color/white"
            android:visibility="gone" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="40dip"
                android:drawableLeft="@drawable/content_icon_map_def"
                android:drawablePadding="12dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:layout_marginTop="12dip"
                android:ellipsize="end"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="12dip"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:drawableLeft="@drawable/content_icon_map_def"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="@string/get_adress"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />

            <View
                android:layout_width="7dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/arrow2right_gray_small" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_marginTop="12dip"
            android:background="@color/white" >

            <com.aibaide.xuanbao.image.NetImageView
                android:id="@+id/goods_img"
                android:layout_width="84dip"
                android:layout_height="84dip"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="10dip"
                android:scaleType="centerInside" >
            </com.aibaide.xuanbao.image.NetImageView>

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106dip"
                android:layout_marginTop="8dip"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/goods_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="106dip"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="155dip"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goods_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dip"
                android:layout_marginRight="5dip"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@color/white" >

            <EditText
                android:id="@+id/words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dip"
                android:background="@drawable/round_gray_slid_back"
                android:gravity="left"
                android:hint="@string/words"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/round_blue_back"
            android:gravity="center"
            android:text="@string/sure_info"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>