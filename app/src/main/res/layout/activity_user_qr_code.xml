<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="440dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical" >

            <com.aibaide.xuanbao.views.RoundImageView
                android:id="@+id/photo"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_marginLeft="22dp" >
            </com.aibaide.xuanbao.views.RoundImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="18sp" />
        </RelativeLayout>

        <com.aibaide.xuanbao.image.NetImageView
            android:id="@+id/qr_code"
            android:layout_width="254dip"
            android:layout_height="254dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" >
        </com.aibaide.xuanbao.image.NetImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="扫一扫上面的二维码图案，邀请好友赚取积分"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>