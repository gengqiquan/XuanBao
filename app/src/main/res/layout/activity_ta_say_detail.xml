<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.qbs.itrytryc.views.TurnView
                android:id="@+id/turn_view"
                android:layout_width="match_parent"
                android:layout_height="350dip" >
            </com.qbs.itrytryc.views.TurnView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/white" >

                <com.qbs.itrytryc.views.RoundImageView
                    android:id="@+id/photo"
                    android:layout_width="44dip"
                    android:layout_height="44dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dip"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dip"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="68dip"
                    android:layout_marginRight="120dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/itry_list_goods_name"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:gravity="top|left"
                android:minLines="4"
                android:paddingLeft="22dip"
                android:paddingRight="12dip"
                android:paddingTop="5dip"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="25dip"
                android:text="评论"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/line" />

            <com.aibaide.xuanbao.refresh.ABListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.aibaide.xuanbao.refresh.ABListView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee" >

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/round_white_back"
            android:gravity="top|left"
            android:hint="输入..."
            android:minHeight="30dip"
            android:padding="5dip"
            android:textColor="@color/tab_check"
            android:textColorHint="@color/tab_check"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bt"
            android:layout_width="60dip"
            android:layout_height="25dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/round_blue_back"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line" />
    </RelativeLayout>

</RelativeLayout>