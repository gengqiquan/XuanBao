<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aibaide.xuanbao.views.ScrollViewContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dip"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="292dip"
                        android:background="@color/white" >

                        <com.aibaide.xuanbao.views.TurnView
                            android:id="@+id/turn_view"
                            android:layout_width="match_parent"
                            android:layout_height="292dip" >
                        </com.aibaide.xuanbao.views.TurnView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dip"
                        android:layout_marginTop="@dimen/lableTopDimen"
                        android:background="@color/white" >

                        <TextView
                            android:id="@+id/goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dip"
                            android:layout_marginTop="10dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/itry_list_goods_name"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="20dip"
                            android:textColor="@color/itry_list_dome_color"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="150dip"
                            android:textColor="@color/itry_list_dome_color"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lableTopDimen"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="8dip"
                            android:text="@string/award_intrduce"
                            android:textColor="@color/gray6"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="10dip"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/goods_intrduce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/gray8"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/web_path"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="@dimen/lableTopDimen"
                        android:background="@color/white"
                        android:drawableRight="@drawable/arrow2right"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/gray6"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/win_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lableTopDimen"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="8dip"
                            android:text="@string/win_user_info"
                            android:textColor="@color/gray6"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="10dip"
                            android:background="@color/line" />

                        <TextView
                            android:id="@+id/win_users"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/gray6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:textColor="@color/gray6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/award"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:textColor="@color/gray6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/join_numbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:textColor="@color/gray6"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lableTopDimen"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="8dip"
                            android:text="@string/exercise_introduce"
                            android:textColor="@color/gray6"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginTop="10dip"
                            android:background="@color/line" />

                        <com.qbs.itrytryc.views.FlexTextView
                            android:id="@+id/intrduce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:layout_marginLeft="18dip"
                            android:layout_marginRight="18dip"
                            android:layout_marginTop="5dip"
                            android:text=""
                            android:textColor="@color/gray8"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="继续拖动，查看图文详情"
                    android:textColor="@color/itry_list_dome_color" />
            </LinearLayout>
        </ScrollView>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </WebView>
    </com.aibaide.xuanbao.views.ScrollViewContainer>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_check"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/join_now"
            android:textColor="@color/tab_check"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/again"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>