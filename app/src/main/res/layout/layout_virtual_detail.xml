<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.aibaide.xuanbao.views.TurnView
        android:id="@+id/turnview"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/lableTopDimen"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/itry_list_goods_name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/win_users"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/lableTopDimen"
        android:background="@color/white" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/win_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="70dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/win_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dip"
            android:gravity="center"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="10sp" />

        <View
            android:id="@+id/arrow"
            android:layout_width="7dip"
            android:layout_height="16dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/arrow2right_gray_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lableTopDimen"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="8dip"
            android:text="福利信息"
            android:textColor="@color/gray6"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="10dip"
            android:background="@color/line" />

        <TextView
            android:id="@+id/goods_intrduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:layout_marginTop="5dip"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/gray8"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/web_path"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/lableTopDimen"
        android:background="@color/white"
        android:drawableRight="@drawable/arrow2right"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/gray6"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lableTopDimen"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="8dip"
            android:text="@string/goods_get_intrduce"
            android:textColor="@color/gray6"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="10dip"
            android:background="@color/line" />

        <com.aibaide.xuanbao.views.FlexTextView
            android:id="@+id/get_intrduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/gray8"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>