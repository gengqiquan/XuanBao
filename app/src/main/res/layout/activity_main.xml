<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aibaide.xuanbao.views.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </com.aibaide.xuanbao.views.NoScrollViewPager>

    <RelativeLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@color/white"
            android:orientation="horizontal" >
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <LinearLayout
                android:id="@+id/i_try"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:gravity="center_horizontal"
                android:layout_marginLeft="25dip"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_try"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_marginTop="3dip" />

                <TextView
                    android:id="@+id/tv_try"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="@string/i_try_try"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/say"
                android:layout_width="48dip"
                android:layout_height="48dip"
               android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_say"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_marginTop="3dip" />

                <TextView
                    android:id="@+id/tv_say"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="@string/ta_say"
                    android:textColor="@color/gray_main_tab"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />



            <LinearLayout
                android:id="@+id/mine"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:gravity="center_horizontal"
                android:layout_marginRight="25dip"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_mine"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:layout_marginTop="3dip" />

                <TextView
                    android:id="@+id/tv_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="@string/mine"
                    android:textColor="@color/gray_main_tab"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/line" />
    </RelativeLayout>

</RelativeLayout>