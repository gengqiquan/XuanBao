<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="135dip" >

    <View
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="37dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="15dip"
        android:text="定时提醒"
        android:gravity="center_vertical"
        android:drawablePadding="3dp"
        android:textColor="@color/itry_list_goods_name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dip"
        android:layout_marginTop="20dip"
        android:text="2015-11-24 10:16:03"
        android:textColor="@color/itry_list_dome_color"
        android:textSize="9sp" />

    <com.aibaide.xuanbao.image.NetImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dip"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="47dip"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="50dip"
        android:ellipsize="end"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/itry_list_dome_color"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dip"
        android:layout_marginTop="110dp"
        android:text="查看详情"
        android:textColor="@color/itry_list_goods_name"
        android:textSize="12sp" />

    <View
        android:layout_width="7dip"
        android:layout_height="16dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="1105dp"
        android:background="@drawable/arrow2right_gray_small" />

</RelativeLayout>