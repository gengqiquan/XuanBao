<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="福利信息"
            android:textColor="@color/itry_list_dome_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@color/white" >

            <com.aibaide.xuanbao.image.NetImageView
                android:id="@+id/goods_img"
                android:layout_width="84dip"
                android:layout_height="84dip"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="10dip"
                android:scaleType="centerInside" >
            </com.aibaide.xuanbao.image.NetImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="106dip"
                android:layout_marginTop="8dip"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/name"
                android:layout_marginLeft="106dip"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="106dip"
                android:textColor="@color/itry_list_dome_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="8dp"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tibs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:text="领取时间："
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/tibs1"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tibs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:text="领取方式："
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/tibs2"
                android:drawablePadding="8dp"
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tibs3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:text="消  费  码："
                android:textColor="@color/itry_list_goods_name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/tibs3"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/tab_check"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="复制"
                android:textColor="@color/tab_check"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/line" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/round_blue_back"
        android:gravity="center"
        android:text="返回尝鲜"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>