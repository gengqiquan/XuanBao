<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <item android:state_selected="true">
        <shape>
                <stroke android:width="1px" android:color="#ddd" />
            <gradient android:angle="0" android:endColor="#EEE7DB"
                android:startColor="#EEE7DB" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape><stroke android:width="1px" android:color="#ddd" />
            <gradient android:angle="0" android:endColor="#EEE7DB"
                android:startColor="#EEE7DB"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape><stroke android:width="1px" android:color="#ddd" />
            <gradient android:angle="0" android:endColor="#fff"
                android:startColor="#fff"  />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>